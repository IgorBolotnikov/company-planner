{
  "name": "company-planner",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "cs": "npx prettier . --check",
    "cs:fix": "npm run cs -- --write",
    "check": "npm run lint && npm run cs",
    "check:fix": "npm run lint:fix && npm run cs:fix",
    "test": "vitest --run --coverage",
    "test-docker:up": "docker compose -f src/testing/server/docker-compose.yml up -d",
    "test-docker:down": "docker compose -f src/testing/server/docker-compose.yml down",
    "test-integration": "npm run test-docker:up && dotenv -e .env.test -- vitest --run --config vitest.integration.config.ts; npm run test-docker:down",
    "build": "cross-env NODE_ENV=production react-router build",
    "dev": "react-router dev --port 3000",
    "start": "cross-env NODE_ENV=production react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "compose-up": "docker compose -f docker-compose.yml up -d",
    "admin": "npx prisma studio",
    "migrate-dev": "npx prisma migrate dev",
    "codegen": "npx prisma generate",
    "setup": "cp .env.example .env && npm install && npm run compose-up && npm run migrate-dev && npm run codegen"
  },
  "dependencies": {
    "@hookform/resolvers": "3.10.0",
    "@kinde-oss/kinde-remix-sdk": "1.1.3",
    "@prisma/client": "5.22.0",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@react-router/node": "7.1.1",
    "@react-router/serve": "7.1.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "cross-env": "7.0.3",
    "isbot": "5.1.17",
    "pino": "9.4.0",
    "pino-pretty": "11.2.2",
    "lucide-react": "0.471.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.54.2",
    "react-router": "7.1.1",
    "tailwind-merge": "2.6.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@react-router/dev": "7.1.1",
    "@types/node": "20",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.1",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "@vitest/coverage-v8": "2.1.1",
    "autoprefixer": "10.4.20",
    "eslint": "8.38.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-etc": "2.0.3",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.37.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "postcss": "8.4.49",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.2",
    "husky": "9.1.6",
    "jsdom": "25.0.1",
    "lint-staged": "15.2.10",
    "vite": "5.4.11",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "2.1.1",
    "vitest-environment-vprisma": "1.3.0",
    "vitest-mock-extended": "2.0.2"
  },
  "prisma": {
    "schema": "./src/server/adapters/db/schema"
  },
  "lint-staged": {
    "*.{ts,tsx}": "npm run check"
  }
}
